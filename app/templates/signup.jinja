{% extends 'module/extends/base.jinja' %}
{% block title %}Sign Up{% endblock %}

{% block header %}
	{% include 'module/includes/standard-header.jinja' %}
{% endblock %}

{% block main %}
	<form method="POST" action="{{ url_for('views.signup') }}">
		{{ form.csrf_token }}

		{{ form.name.label }} <br>
		{{ form.name(size=50) }}
		<br>

		{{ form.email.label }} <br>
		{{ form.email(size=50) }}
		<br>

		{{ form.password.label }} <br>
		{{ form.password(size=50) }}
		<br>

		{{ form.check_password.label }} <br>
		{{ form.check_password(size=50) }}
		<br>

		<input type="submit" name="Cadastrar">
	</form>
{% endblock %}
{% block footer %}


{% endblock %}
